@model IEnumerable<AcademicTranscriptMVC.Models.ResultMVC>

@{
    ViewBag.Title = "Index";
}

<h3><b>Bachelor of Information and Communication Technologies</b></h3>
<br />

<p>
    @Html.Partial("_createButton")
</p>

<table class="table table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Credit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.ActionLink(" ", "AddOrEdit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary glyphicon glyphicon-pencil" })
                <a  onclick="Delete(@item.Id)"  class="btn btn-danger glyphicon glyphicon-trash"></a>
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SucessMessage"]'
            if (successMessage != '') {
                alertify.set('notifier','position', 'top-right');
                alertify.success(successMessage);
            }
        });
        function Delete(id) {
            alertify.confirm('Are you sure you want to delete?', function () {
                window.location.href = '@Url.Action("Delete", "Result")/' + id;
            }, null);
        }

    </script>
}